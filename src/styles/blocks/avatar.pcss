.avatar {
  display: block;
  width: 200px;
  height: 200px;
  overflow: hidden;
  border-radius: 50%;
  flex-shrink: 0;

  @include tablets {
    width: 170px;
    height: 170px;
  }

  &--small {
    width: 75px;
    height: 75px;

    @include phones {
      width: 50px;
      height: 50px;
    }
  }
}

.avatar__img {
  display: block;
  width: 100%;
  height: 100%;
}