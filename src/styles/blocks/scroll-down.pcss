.scroll-down {
  cursor: pointer;
  display: flex;
  align-items: center;
  font-size: 18px;
  font-weight: 600;
  
  &:after {
    width: 30px;
    height: 35px;
    content: "";
    background: svg-load('scroll.svg', fill=currentColor, width=100%, height=100%) center center no-repeat;
    margin-left: 20px;
    display: inline-block;
  }
}