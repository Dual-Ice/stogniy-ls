.works-slider {
  display: flex;
  justify-content: space-between;
}

.works-slider__images {
  width: 66%;
  height: 550px;
  position: relative;
  padding-bottom: 50px;

  &:before {
    content: '4';
    position: absolute;
    color: #e6e6e6;
    top: 40%;
    transform: translateY(-50%);
    line-height: 1;
    left: 100%;
    font-size: 400px;
    font-weight: 800;
    margin-left: -8%;
  }
}

.works-slider__images-wrap {
  position: relative;
  top: 0;
  right: 0;
  width: 100%;
  height: 100%;
}

.works-slider__image {
  height: 100%;
  width: 100%;
}

.works-slider__data {
  width: 24%;
}

.works-slider__tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 45px;
}

.works-slider__tags-item {
  padding: 16px 20px;
  background-color: rgba($tag, .1);
  border-radius: 23px;
  font-size: 15px;
  font-weight: 600;
  margin-right: 15px;
}

.works-slider__title {
  font-size: 30px;
  font-weight: 700;
  margin-bottom: 45px;
}

.works-slider__desc {
  opacity: 0.7;
  font-weight: 600;
  margin-bottom: 50px;
  line-height: 30px;
}

.works-slider__previews {
  width: 178px;
  position: absolute;
  right: 0;
  bottom: 0;
}

.works-slider__preview-item {
  height: 100px;

  &.active,
  &:hover {
    outline: 3px solid #dc9322;
  }
}

.works-slider__preview-btn {
  display: block;
  height: 100%;
  outline: none;
  border: none;
  padding: 0;
}

.works-slider__preview-img {
  width: 100%;
  height: 100%;
}

.works-slider__buttons {
  position: absolute;
  top: 100%;
  right: 0;
}

.works-slider__button {
  width: 50px;
  height: 50px;
  background: #353e4e;
  padding: 0;
  outline: none;
  border: none;
  
  &:hover {
    .works-slider__button-icon {
      opacity: 1;
    }
  }

  &--prev {
    .works-slider__button-icon {
      transform: rotate(90deg);
    }
  }

  &--next {
    .works-slider__button-icon {
      transform: rotate(-90deg);
    }
  }
}

.works-slider__button-icon {
  width: 10px;
  height: 8px;
  opacity: .3;
  fill: $white;
}

.works-slider__link {
  font-size: 18px;
  font-weight: 700;
  color: $href;
}