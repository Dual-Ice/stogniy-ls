.skill {
  position: relative;
  width: 166px;
  height: 166px;

  @include tablets {
    height: 135px;
    width: 135px;
  }

  @include phones {
    width: 120px;
    height: 120px;
  }
}

.skill__title {
  opacity: 0.5;
  font-size: 18px;
  font-weight: 700;

  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  padding: 14px;

  @include tablets {
    font-size: 16px;
    padding: 10px;
  }
}

.skill__circle {
  fill: transparent;
  &--under {
    stroke: #e9e9e9;
    stroke-width: 5px;
  }
  &--above {
    stroke-width: 10px;
    stroke-dasharray: 251.2;
    stroke-dashoffset: 100;
    transform: rotate(-180deg);
    transform-origin: center;
  }
}