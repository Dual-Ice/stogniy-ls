.skill {
  position: relative;
  width: 166px;
  height: 166px;
}

.skill__title {
  opacity: 0.5;
  font-size: 18px;
  font-weight: 700;

  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  padding: 14px;
}

.skill__circle {
  fill: transparent;
  &--under {
    stroke: #e9e9e9;
    stroke-width: 5px;
  }
  &--above {
    stroke-width: 12px;
    stroke-dasharray: 85;
    stroke-dashoffset: 0;
  }
}