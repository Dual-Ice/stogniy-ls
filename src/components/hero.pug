section.hero.fullscreen-section(id="hero")
  .container.hero__container
    header.header
      .header__logo
        a.logo(href="#") MC
      .header__menu
        +menu
      .header__links
        +socials
        button(type="button").ham-menu__btn
          +icon('menu', 'ham-menu__btn-icon')
      .header__ham-menu
        button(type="button").ham-menu__close
          +icon('cross', 'ham-menu__close-icon')
        .ham-menu
          +menu('nav--ham')
          +socials('social--ham')
    .hero__content
      .user-info
        h1.user-info__desc !{desc}
        .user-info__username #{username}
    .hero__btns
      a(href="#about").scroll-down Скролл