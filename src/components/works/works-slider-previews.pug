script(type="text/x-template" id="slider-previews")
  div(ref="previewsWrap").works-slider__previews
    ul(ref="previewsList").works-slider__previews-list
      li.works-slider__preview-item(
        v-for="work in works"
        :key="work.id"
        :class="{active: currentWork.id === work.id}"
        @click.prevent="$emit('slide', work.ndx)"
      )
        button(
          type="button"
        ).works-slider__preview-btn
          img(:src="work.photo").works-slider__preview-img