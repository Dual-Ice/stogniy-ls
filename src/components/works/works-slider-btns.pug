script(type="text/x-template" id="slider-btns")
  .works-slider__buttons.slider-btns
    button(
      type="button"
      :disabled="nextBtnDisable"
      @click.prevent="$emit('slide', 'next')"
    ).slider-btn.slider-btn--next
      +icon('short-arrow', 'slider-btn__icon')
    button(
      type="button"
      :disabled="prevBtnDisable"
      @click.prevent="$emit('slide', 'prev')"
    ).slider-btn.slider-btn--prev
      +icon('short-arrow', 'slider-btn__icon')